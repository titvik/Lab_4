@model lab4.Models.User
@{
    ViewData["Title"] = "Reset";
}

<h1>Reset your password</h1>

<form method="post" action="ResetCode">
    <label><b>Code</b></label>
    <div class="form-group w-25">
        <input class="form-control" type="text" asp-for="ResetCode" />
        <span style="color: red;" asp-validation-for="ResetCode"></span>

    </div>

    <button type="submit" class="btn btn-light">Verify</button>
</form>
