@model lab4.Models.User
@{
    ViewData["Title"] = "Reset";
}

<h1>Reset your password</h1>

<form method="post">
    <label><b>Email</b></label>
    <div class="form-group w-25">
        <input class="form-control" type="text" asp-for="Email" />
        <span style="color: red;" asp-validation-for="Email"></span>

    </div>

    <button name="btn" value="send" type="submit" class="btn btn-primary">Send me a code</button>
    <button name="btn" value="havecode" type="submit" class="btn btn-light">I have a code</button>
</form>
